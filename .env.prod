# Environment Configuration - Production
ENVIRONMENT=prod
DEBUG=false
HOST=0.0.0.0
PORT=8002

# SSL/TLS Configuration
SSL_ENABLED=false
SSL_CERT_PATH=/app/certs/cert.pem
SSL_KEY_PATH=/app/certs/key.pem

# MySQL Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=project_user
MYSQL_PASSWORD=CHANGE_ME
MYSQL_DATABASE=project_db
MYSQL_POOL_SIZE=20
MYSQL_MAX_OVERFLOW=40

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME
REDIS_DB=0
REDIS_POOL_SIZE=20

# Service Discovery Configuration
SERVICE_DISCOVERY_TYPE=nacos
NACOS_SERVER_ADDRESSES=localhost:8848
NACOS_NAMESPACE=public
NACOS_GROUP=DEFAULT_GROUP
NACOS_SERVICE_NAME=project-service
NACOS_SERVICE_PORT=8002
NACOS_SERVICE_IP=localhost

# Vault Configuration
VAULT_ENABLED=true
VAULT_ADDR=http://127.0.0.1:8200
VAULT_AUTH_METHOD=approle
VAULT_ROLE_ID=CHANGE_ME
VAULT_SECRET_ID=CHANGE_ME
VAULT_TOKEN=
VAULT_TIMEOUT=5
VAULT_VERIFY=true
VAULT_CREDENTIAL_PATH=secret/credentials

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=/app/logs/project-service.log
LOG_DIRECTORY=/app/logs
LOG_REQUEST_FILE=/app/logs/request.log
LOG_ERROR_FILE=/app/logs/error.log
LOG_ACCESS_FILE=/app/logs/access.log
LOG_AUDIT_FILE=/app/logs/audit.log
LOG_APPLICATION_FILE=/app/logs/application.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=10

# Monitoring Configuration
PROMETHEUS_ENABLED=true
METRICS_PORT=9091

# Security Configuration
TRUSTED_PROXIES=127.0.0.1,localhost
ALLOWED_ORIGINS=*
CORS_ENABLED=true

# JWT Configuration
JWT_PUBLIC_KEY_PATH=
